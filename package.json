{
    "name": "mtl-text-processor",
    "version": "1.0.0",
    "description": "Tools for pre-processing and post-processing of text being machine translated.",
    "main": "lib/TextProcessor.js",
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "jest": "^27.5.1",
        "prettier": "^2.6.2",
        "ts-jest": "^27.1.4",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typedoc": "^0.22.15",
        "typedoc-plugin-missing-exports": "^0.22.6",
        "typescript": "^4.6.3"
    },
    "scripts": {
        "test": "jest --config jestconfig.json",
        "build": "tsc && npx typedoc --out docs --entryPointStrategy expand ./src",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/reddo9999/mtl-text-processor.git"
    },
    "keywords": [],
    "author": "reddo9999",
    "license": "GNU General Public License v3.0",
    "bugs": {
        "url": "https://github.com/reddo9999/mtl-text-processor/issues"
    },
    "homepage": "https://github.com/reddo9999/mtl-text-processor#readme",
    "files": [
        "lib/**/*"
    ]
}
